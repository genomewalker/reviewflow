{
  "name": "rebuttr",
  "version": "2.0.0",
  "description": "AI-powered platform for managing peer review responses - supports multiple manuscripts",
  "main": "cli.js",
  "bin": {
    "rebuttr": "./cli.js",
    "paper-review": "./cli.js",
    "rebuttr-mcp": "./mcp-knowledge-server.js"
  },
  "scripts": {
    "start": "node cli.js",
    "server": "node opencode-server.js api",
