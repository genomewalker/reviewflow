    "add-paper": "node cli.js papers add",
    "postinstall": "node scripts/postinstall.js || true"
  },
  "keywords": [
    "peer-review",
    "manuscript",
    "academic",
    "ai",
    "opencode",
    "research",
    "scientific-writing",
    "reviewer-response",
    "claude",
    "gpt"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/genomewalker/rebuttr.git"
  },
  "bugs": {
    "url": "https://github.com/genomewalker/rebuttr/issues"
  },
  "homepage": "https://github.com/genomewalker/rebuttr#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "files": [
    "cli.js",
    "db.js",
    "setup.js",
    "opencode-server.js",
    "mcp-knowledge-server.js",
    "webapp.html",
    "index.html",
    "css/",
    "js/",
    "scripts/",
    "skills/",
    "templates/",
    "input/PUT_YOUR_FILES_HERE.txt",
    "README.md"
